<div class="event-detail-container">
	<h4>{{upper-case "new - event"}}</h4>
	<div class="form-inline">
		<div class="form-group">
			<label for="code">Code</label>
			{{input type="text" class="form-control event-detail-small-input" value=code}}
		</div>
		<div class="form-group">
			<label for="name">Name</label>
			{{input type="text" class="form-control event-detail-medium-input" value=name}}
		</div>
	</div>
	<div class="form-inline">
		<div class="form-group">
			<label for="line">Line</label>
			{{view "select" class="form-control" content=lines optionValuePath="content.id" optionLabelPath="content.name" selection=businessLineSelected value=businessLineSelected prompt="[Select]"}}
		</div>
		<div class="form-group">
			<label for="type">Type</label>
			{{view "select" class="form-control" content=types optionValuePath="content.id" optionLabelPath="content.type" value=type}}
		</div>
	</div>
	<div class="form-inline">
		<div class="form-group">
			<label for="address">Address</label>
			{{input type="text" class="form-control event-detail-medium-input" value=address}}
		</div>
		<div class="form-group">
			<label for="country">Country</label>
			{{view "select" class="form-control" content=countries optionValuePath="content.id" optionLabelPath="content.name" value=country}}
		</div>		
	</div>
	<div class="form-inline">
		<div class="form-group">
			<label for="place">Place</label>
			{{input type="text" class="form-control event-detail-medium-input" value=place}}
		</div>
		<div class="form-group">
			<label for="price">Price</label>
			{{input type="text" class="form-control event-detail-small-input" value=price}}
		</div>
	</div>
	<div class="form-inline">	
		<div class="form-group">
			<label for="date">Date</label>
			{{input type="text" class="form-control event-detail-small-input" value=date}}
		</div>
		<div class="form-group">
			<label for="capacity">Capacity</label>
			{{input type="text" class="form-control event-detail-small-input" value=capacity}}
		</div>
		<div class="form-group">
			<label for="code">Available</label>
			{{input type="checkbox" class="form-control" checked=available}}
		</div>
	</div>
	<div class="form-inline">
		<div class="form-group">
			<label for="comments" class="event-detail-top-label">Comments</label>
			{{textarea value=comments cols="80" rows="3"}}
		</div>
	</div>
	<div class="pull-left">      		
    	<a {{action "confirm" this}} class="btn btn-primary">Confirm</a>
    	<a {{action "cancel"}} class="btn btn-default">Cancel</a>
	</div>
</div>	