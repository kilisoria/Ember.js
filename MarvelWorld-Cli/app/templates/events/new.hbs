<div class="event-detail-container">
	<h4>{{upper-case "new - event"}}</h4>
	<div class="form-inline">
		<div class="form-group">
			<label for="code">Code</label>
			{{input type="text" class="form-control event-detail-small-input" value=model.code maxlength=6 placeholder="999999" required="true"}}
		</div>
		<div class="form-group">
			<label for="name">Name</label>
			{{input type="text" class="form-control event-detail-medium-input" value=model.name maxlength=40}}
		</div>
	</div>
	<div class="form-inline">
		<div class="form-group">
			<label for="line">Line</label>
			{{view "select" class="form-control" content=lines optionValuePath="content.id" optionLabelPath="content.name" prompt="[Select]" value=model.businessLine}}
		</div>
		<div class="form-group">
			<label for="type">Type</label>
			{{view "select" class="form-control" content=types optionValuePath="content.id" optionLabelPath="content.type" prompt="[Select]" value=model.eventType}}
		</div>
	</div>
	<div class="form-inline">
		<div class="form-group">
			<label for="address">Address</label>
			{{input type="text" class="form-control event-detail-medium-input" value=model.address maxlength=40}}
		</div>
		<div class="form-group">
			<label for="country">Country</label>
			{{view "select" class="form-control" content=countries optionValuePath="content.id" optionLabelPath="content.name" prompt="[Select]" value=model.country}}
		</div>		
	</div>
	<div class="form-inline">
		<div class="form-group">
			<label for="place">Place</label>
			{{input type="text" class="form-control event-detail-medium-input" value=model.place maxlength=40 disabled="disabled"}}
		</div>
		<div class="form-group">
			<label for="price">Price</label>
			{{input type="text" class="form-control event-detail-small-input" value=model.price}}
		</div>
	</div>
	<div class="form-inline">	
		<div class="form-group">
			<label for="date">Date</label>				
			{{bootstrap-datepicker autoclose=true placeholder="Enter a date" value=model.date  class="form-control"}}			
		</div>
		<div class="form-group">
			<label for="capacity">Capacity</label>
			{{input type="text" class="form-control event-detail-small-input" value=model.capacity pattern="^(0|[1-9][0-9]*)$"}}
		</div>
		<div class="form-group">
			<label for="code">Available</label>
			{{input type="checkbox" class="form-control" checked=model.available}}
		</div>
	</div>
	<div class="form-inline">
		<div class="form-group">
			<label for="comments" class="event-detail-top-label">Comments</label>
			{{textarea cols="94" rows="3" value=model.comments}}
		</div>
	</div>
	<div class="pull-left">      		
    	<a {{action "confirm" this}} class="btn btn-primary">Confirm</a>
    	<a {{action "cancel"}} class="btn btn-default">Cancel</a>
	</div>
</div>	