<div class="event-detail-container">
	<h3>{{upper-case "new - event"}}</h3>
	<div class="form-inline">
		<div class="form-group">
			<label for="code">Code</label>
			{{input type="text" class="form-control event-detail-small-input" value=code}}
		</div>
		<div class="form-group">
			<label for="name">Name</label>
			{{input type="text" class="form-control event-detail-medium-input" value=name}}
		</div>
	</div>
	<div class="form-inline">
		<div class="form-group">
			<label for="code">Line</label>
			{{view "select" class="form-control" value=line}}
		</div>
		<div class="form-group">
			<label for="code">Type</label>
			{{view "select" class="form-control" value=type}}
		</div>
	</div>
	<div class="form-inline">
		<div class="form-group">
			<label for="address">Address</label>
			{{input type="text" class="form-control event-detail-medium-input" value=address}}
		</div>
		<div class="form-group">
			<label for="code">Country</label>
			{{view "select" class="form-control" value=country}}
		</div>		
	</div>
	<div class="form-inline">
		<div class="form-group">
			<label for="name">Place</label>
			{{input type="text" class="form-control event-detail-medium-input" value=place}}
		</div>
		<div class="form-group">
			<label for="code">Price</label>
			{{input type="text" class="form-control event-detail-small-input" value=price}}
		</div>
	</div>
	<div class="form-inline">	
		<div class="form-group">
			<label for="name">Date</label>
			{{input type="text" class="form-control event-detail-small-input" value=date}}
		</div>
		<div class="form-group">
			<label for="name">Capacity</label>
			{{input type="text" class="form-control event-detail-small-input" value=capacity}}
		</div>
		<div class="form-group">
			<label for="code">Available</label>
			{{input type="checkbox" class="form-control" checked=available}}
		</div>
	</div>
	<div class="form-inline">
		<div class="form-group">
			<label for="code" class="event-detail-top-label">Comments</label>
			{{textarea value=comment cols="80" rows="3"}}
		</div>
	</div>
	<div class="pull-left">      		
    	<a {{action "confirm"}} class="btn btn-primary">Confirm</a>
    	<a {{action "cancel"}} class="btn btn-default">Cancel</a>
	</div>
</div>	